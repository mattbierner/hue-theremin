    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "out",
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
